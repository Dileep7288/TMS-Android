<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/__eczu7skp156k8ne_nn0dmq">

    <!-- Welcome Title -->
    <TextView
        android:id="@+id/dashboard_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin Dashboard"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <!-- Admin Info Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/admin_info_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dashboard_title"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="16dp"
        android:elevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/admin_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/admin_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Buttons Container -->
    <LinearLayout
        android:id="@+id/buttons_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/admin_info_card"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- View Tasks Button -->
        <Button
            android:id="@+id/view_tasks_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="View Tasks"
            android:textSize="18sp"
            android:padding="15dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#4CAF50"/>

        <!-- View Users Button -->
        <Button
            android:id="@+id/view_users_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="View Users"
            android:textSize="18sp"
            android:padding="15dp"
            android:layout_marginStart="8dp"
            android:backgroundTint="#2196F3"/>
    </LinearLayout>

    <!-- Logout Button -->
    <Button
        android:id="@+id/logout_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginHorizontal="16dp"
        android:text="Logout"
        android:textSize="18sp"
        android:padding="15dp"
        android:backgroundTint="#F44336"/>

</RelativeLayout>